import type { CollectionEntry } from "astro:content";

export type Props = {
  posts: CollectionEntry<"posts">[];
  isDraft: boolean;
};
const { posts, isDraft } = Astro.props;
---

{
  posts.length !== 0 ? (
    <ol class="grid gap-8">
      {posts.map((post) => (
        <li class="grid">
          <FormattedDate date={post.data.pubDate} />
