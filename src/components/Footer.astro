---
const icons = [
  {
    name: "RSS",
    href: "/rss.xml",
    imagePath: "/rss-icon.svg",
  },
  {
    name: "Twitter",
    href: "https://twitter.com/reona_5",
    imagePath: "/twitter-icon.svg",
  },
  {
    name: "GitHub",
    href: "https://github.com/reona5",
    imagePath: "/github-black-icon.svg",
  },
] as const;
const today = new Date();
---

<footer>
  <div class="m-auto max-w-4xl justify-center p-6">
    <div class="flex justify-between">
      <span>
        &copy; {today.getFullYear()} Reona Shimada.
      </span>
      <nav>
        <ul class="flex gap-4 p-0">
          {
            icons.map((item) => (
              <li>
                <a href={item.href} target="_blank" rel="noreferrer">
                  <img
                    src={item.imagePath}
                    width={24}
                    height={24}
                    alt={`${item.name} icon`}
                    loading="lazy"
                    decoding="async"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>
</footer>
